@model ModelCliente

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h5 style="padding-right: 400px;" class="modal-title">Clientes</h5>
        </div>
        <div class="modal-body">
            <form asp-controller="Cliente" asp-action="Cadastro" method="post">
                <input asp-for="Id" type="hidden" class="form-control" value="@try { @ViewBag.Cliente.Id } catch { }" />

                <div class="form-row">
                    <div class=" col col-12">
                        <label>Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" required value="@try { @ViewBag.Cliente.Nome } catch { }" />
                        <span class="text-danger"asp-validation-for="Nome"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class=" col col-8">
                        <label>CPF/CNPJ</label>
                        <input asp-for="CPF" type="text" class="form-control" required value="@try { @ViewBag.Cliente.CPF } catch { }" />
                    </div>
                </div>

                <div class="form-row">
                    <div class=" col col-8">
                        <label>Data de Nascimento</label>
                        <input asp-for="DataNascimento" type="date" class="form-control" required value="@try { @ViewBag.Cliente.DataNascimento } catch { }" />
                    </div>
                </div>

                <div class=" form-row">
                    <div class=" col col-8">
                        <label>Limite de Crédito</label>
                        <input asp-for="LimiteDeCredito" type="text" class="form-control" required value="@try { @ViewBag.Cliente.LimiteDeCredito } catch { }" />
                    </div>
                </div>

                <br /><hr />

                <div class="form-inline">
                    <button type="submit" class="btn btn-outline-success btn-sm"> <i class="fa fa-check"></i> Registrar</button>
                    <button type="button" class="btn btn-outline-dark btn-sm ml-3" onclick="Voltar()"> <i class="fa fa-times"> Desistir</i></button>
                </div>
            </form>
        </div>        
    </div>
</div>

<script>
    function Voltar() {
        window.location.href = '../../Cliente/Index';
    }
</script>